@model KeremetTest.Models.ClientVM

@{
    ViewData["Title"] = "Тестовое задание";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="SocialNumber" class="control-label"></label>
                <input asp-for="SocialNumber" class="form-control" />
                <span asp-validation-for="SocialNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Экспорт на Exel" class="btn btn-primary" asp-action="ExportToExel" asp-controller="Home" />
            </div>
            <div>
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="text-danger" role="alert">
                        @TempData["SuccessMessage"]
                    </div>
                }
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
